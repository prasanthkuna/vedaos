{
  "name": "veda-be",
  "version": "0.1.0",
  "private": true,
  "description": "VEDA OS backend services",
  "packageManager": "bun@1.3.4",
  "type": "module",
  "scripts": {
    "dev": "encore run",
    "start": "encore run",
    "typecheck": "bunx tsc --noEmit -p tsconfig.bun.json",
    "lint": "bun run typecheck",
    "smoke:api": "bun run scripts/smoke-api.ts",
    "db:reset": "bun run scripts/reset-db.ts",
    "db:reset:local": "bun run scripts/reset-db.ts --yes",
    "db:reset:staging": "bun run scripts/reset-db.ts --yes --namespace staging"
  },
  "dependencies": {
    "@clerk/backend": "^2.33.0",
    "astronomy-engine": "^2.1.19",
    "encore.dev": "^1.53.6",
    "luxon": "^3.7.2",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "@types/luxon": "^3.7.1",
    "typescript": "^5.9.2"
  }
}
