{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "types": ["bun"],
    "baseUrl": "."
  },
  "include": [
    "src/**/*.ts",
    "profiles/**/*.ts",
    "engine/**/*.ts",
    "validation/**/*.ts",
    "billing/**/*.ts",
    "compliance/**/*.ts",
    "lib/**/*.ts",
    "db.ts",
    "storage.ts"
  ]
}
